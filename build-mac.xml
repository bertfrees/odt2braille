<?xml version="1.0" encoding="UTF-8"?>
<project name="Odt2BrailleAddOn" default="default" basedir=".">
    <description>Build the project on Mac OS without NetBeans.</description>
	<import file="build.xml"/>
		
	<target name="-init-mac">		
		<property file="nbproject/project.properties"/>
		<property file="nbproject/project-uno.properties"/>
		<property file="build-mac.properties"/>
	
		<available file="${dist.dir}${file.separator}${external.jar.dir}" property="dist.lib.dir.exists"/>		
	</target>
	
	<target name="-copy-lib" depends="-init-mac" unless="dist.lib.dir.exists">	
		<copy todir="${dist.dir}">
			<fileset dir="." includes="${external.jars}" />
		</copy>
	</target>
		
	<target name="-pre-init" depends="-init-mac,-copy-lib"/>	
	
</project>